<Window x:Class="API_Endpoints.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:API_Endpoints"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="API EndPoints" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="RequestTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:RequestType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Import" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="25" Click="Import_Click"/>
            <Button Content="Export" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="25" Margin="10,0,0,0" Click="Export_Click"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Margin="0,10,0,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Model.EndPoints}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:EndPoint}">
                            <Grid Margin="10,10,10,10" Height="200">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Height="22" Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Width="70" Grid.Column="0" ItemsSource="{Binding Source={StaticResource RequestTypes}}" SelectedValue="{Binding Type}"/>
                                    <TextBox TextWrapping="Wrap" Margin="10,0,10,0" Grid.Column="1" Text="{Binding Url}"/>
                                    <Button Width="20" Grid.Column="2" Background="Transparent" BorderThickness="0" DataContext="{Binding}" Click="Remove_EndPoint">
                                        <Image Source="/Assets/delete.png" Width="20" Height="20" HorizontalAlignment="Center" />
                                    </Button>
                                </Grid>
                                <Grid Margin="0,10,0,10" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TabControl Grid.Column="0" Padding="10,2,10,2">
                                        <TabItem Header="Params">
                                            <Grid Background="#FFE5E5E5">
                                                <TextBox TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Text="{Binding Params}" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="Body" Height="22" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                                            <Grid Background="#FFE5E5E5">
                                                <TextBox TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Text="{Binding Body}" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                                            </Grid>
                                        </TabItem>
                                    </TabControl>
                                    <TabControl Grid.Column="1" Margin="-2,0,0,0" Padding="10,2,10,2" Grid.IsSharedSizeScope="True">
                                        <TabItem Header="Success">
                                            <Grid Background="#FFE5E5E5">
                                                <TextBox TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Text="{Binding Succes}" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="Error">
                                            <Grid Background="#FFE5E5E5">
                                                <TextBox TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Text="{Binding Error}" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                                            </Grid>
                                        </TabItem>
                                    </TabControl>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button  Content="Add" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="29" Margin="0,10,0,0" Cursor="Hand" Click="Add_EndPoint">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
